<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/calendar_meal_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="14dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="14dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="TextView"
        android:textColor="@android:color/holo_red_light"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/calendar_meal_divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/calendar_meal_type"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/image_divider_light_blue" />

    <ImageView
        android:id="@+id/calendar_meal_type_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/calendar_meal_divider"
        android:layout_alignStart="@+id/calendar_meal_divider"
        android:layout_alignTop="@+id/calendar_meal_divider"
        android:layout_marginTop="10dp"
        android:src="@drawable/image_breakfast" />

    <TextView
        android:id="@+id/calendar_recipe_meal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/calendar_meal_type_image"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/calendar_meal_type_image"
        android:layout_toRightOf="@+id/calendar_meal_type_image"
        android:text="TextView" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/calendar_meal_divider"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:src="@android:drawable/ic_menu_gallery" />

</RelativeLayout>