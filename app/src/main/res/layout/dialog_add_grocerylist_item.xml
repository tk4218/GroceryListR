<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <AutoCompleteTextView
        android:id="@+id/add_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="New Item"
        android:inputType="textCapWords" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/add_item_type"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:entries="@array/ingredient_type" />

        <EditText
            android:id="@+id/add_item_amount"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:inputType="numberDecimal" />

        <Spinner
            android:id="@+id/add_item_measurement"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:entries="@array/measurements" />

    </LinearLayout>

</LinearLayout>